            <small class="form-text text-muted">Write the name of the person</small>
        </div>
    
            <div class="form-group">
                <label for="imageInput">File</label>
                <input  type="file" value="<%= reports.file %>" class="form-control" id="imageInput" name="file" accept="*/*" onchange="displaySelectedImage(event)">
                <small class="form-text text-muted">Upload an file</small>
            </div>
            <div id="fileNameDisplay" class="" style="display: flex;justify-content: center; align-items: center;">
